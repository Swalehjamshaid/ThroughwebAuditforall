{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "backend": {
      "inputs": [
        {
          "local": true,
          "include": [
            "backend/"
          ]
        }
      ],
      "commands": [
        "pip install --no-cache-dir -r backend/requirements.txt"
      ]
    }
  },
  "deploy": {
    "startCommand": "python -m uvicorn backend.app.main:app --host 0.0.0.0 --port ${PORT}",
    "inputs": [
      {
        "step": "backend",
        "include": [
          "backend/"
        ]
      }
    ]
  }
}