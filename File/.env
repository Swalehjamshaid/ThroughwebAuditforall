# Environment flags
ENV=production
DEBUG=false

# Public base URL for your deployment (Railway)
APP_BASE_URL=https://your-app.up.railway.app

# Security secrets (replace with strong random strings)
SESSION_SECRET=change_me_to_a_long_random_string
TOKEN_SECRET=change_me_to_a_long_random_string

# Railway sets this automatically; if you need a manual value:
# Use pg8000 driver to avoid psycopg2 ABI issues on Python 3.13
# DATABASE_URL=postgresql+pg8000://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=

# Crawl settings
MAX_PAGES=120
